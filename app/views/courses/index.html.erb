<div class="jumbotron">
  <div class="container">
    <h1>Körtid till alla Smartgolfa banor</h1>

    <%= form_tag courses_path, :method => 'get' do %>
      <div class="form-group">
        <label class="control-label">Ange utgångspunkt för att få fram körtid samt vägbeskrivning.</label>
        <div class="input-group">
          <%= text_field_tag :from, params[:from], class: 'form-control' %>
          <span class="input-group-btn">
            <%= submit_tag "Kör!", class: 'btn btn-primary' %>
          </span>
        </div>
      </div>
    <% end %>

  </div>
</div>

<div class="container">
  <ul class="list-group">
    <% for course in @courses %>
      <li class="list-group-item">
        <% unless course.duration.nil? %>
          <span class="label label-warning pull-right">
            <%= course.distance %>
          </span>
          <span class="label label-info pull-right"><%= course.duration %></span>
        <% end %>
        <h4><%= course.name %></h4>
        <small><%= course.address %></small>
        <small><a href="#" class="pull-right">Visa vägbeskrivning</a></small>
      </li>
    <% end %>
  </ul>
</div>